---
interface Props {
  title: string;
  value: number | string;
  description: string;
  color?: 'blue' | 'green' | 'yellow' | 'purple' | 'red';
  icon?: string;
}

const { title, value, description, color = 'blue', icon } = Astro.props;

const colorClasses = {
  blue: 'bg-blue-50 text-blue-700 border-blue-200',
  green: 'bg-green-50 text-green-700 border-green-200',
  yellow: 'bg-yellow-50 text-yellow-700 border-yellow-200',
  purple: 'bg-purple-50 text-purple-700 border-purple-200',
  red: 'bg-red-50 text-red-700 border-red-200'
};
---

<div class={`p-6 rounded-xl border-2 ${colorClasses[color]} transition-transform hover:scale-105`}>
  <div class="flex items-center justify-between">
    <div>
      <div class="text-3xl font-bold">
        {icon && <span class="mr-2">{icon}</span>}
        {value}
      </div>
      <div class="text-sm font-medium mt-1">{title}</div>
      <div class="text-xs opacity-75 mt-1">{description}</div>
    </div>
  </div>
</div>
