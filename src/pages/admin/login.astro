---
export const prerender = false;

import { loginUser, getSessionFromToken } from '../../lib/auth';

// Verificar si ya está logueado
const authCookie = Astro.request.headers.get('cookie');
if (authCookie?.includes('admin-token=')) {
  const tokenMatch = authCookie.match(/admin-token=([^;]+)/);
  if (tokenMatch) {
    const session = await getSessionFromToken(tokenMatch[1]);
    if (session) {
      return Astro.redirect('/admin/dashboard');
    }
  }
}

let error = '';
let success = '';

if (Astro.request.method === 'POST') {
  try {
    const formData = await Astro.request.formData();
    const email = formData.get('email')?.toString() || '';
    const password = formData.get('password')?.toString() || '';
    
    // Obtener IP y User Agent para auditoría
    const ipAddress = Astro.request.headers.get('x-forwarded-for') || 
                     Astro.request.headers.get('x-real-ip') || 
                     'unknown';
    const userAgent = Astro.request.headers.get('user-agent') || 'unknown';

    console.log('🔐 Intento de login:', { email, ipAddress });
    
    // Intentar login con base de datos
    const { user, accessToken } = await loginUser(email, password, ipAddress, userAgent);
    
    console.log('✅ Login exitoso, generando respuesta:', { userId: user.id, role: user.role });
    console.log('🍪 Token generado (primeros 20 chars):', accessToken.substring(0, 20));
    
    // Configurar cookie segura con JWT
    const headers = new Headers();
    headers.append('Location', '/admin/dashboard');
    headers.append('Set-Cookie', `admin-token=${accessToken}; HttpOnly; Path=/; Max-Age=86400; SameSite=Strict`);
    
    console.log('🚀 Redirigiendo a dashboard con cookie configurada');
    
    return new Response('', {
      status: 302,
      headers
    });
    
  } catch (e) {
    console.error('❌ Error en login:', e);
    error = e instanceof Error ? e.message : 'Error procesando el login. Intenta de nuevo.';
  }
}
