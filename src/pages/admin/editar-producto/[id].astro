export const prerender = false;

import { supabase } from "../../../lib/supabaseClient";

const { id } = Astro.params;

if (!id) {
  return Astro.redirect('/admin/productos');
}

// Obtener producto para editar
const { data: producto, error } = await supabase
  .from('productos')
  .select('*')
  .eq('id', id)
  .single();

if (error || !producto) {
  return Astro.redirect('/admin/productos');
}

// Manejar formulario de edici√≥n
if (Astro.request.method === 'POST') {
  try {
    const formData = await Astro.request.formData();
    
    const title = formData.get('title') as string;
    const description = formData.get('description') as string;
    const price = parseFloat(formData.get('price') as string);
    const stock = parseInt(formData.get('stock') as string);
    const category = formData.get('category') as string;
    const sku = formData.get('sku') as string;
    const weight = formData.get('weight') ? parseFloat(formData.get('weight') as string) : null;
    const dimensions = formData.get('dimensions') as string;
    
    // Parsear im√°genes
    const imageUrls = [];
    for (let i = 1; i <= 5; i++) {
      const imageUrl = formData.get(`image_${i}`) as string;
      if (imageUrl && imageUrl.trim()) {
        imageUrls.push(imageUrl.trim());
      }
    }
    
    // Parsear configuraci√≥n de pagos
    const paymentEnabled = formData.get('payment_enabled') === 'on';
    const paymentConfig = {
      enabled: paymentEnabled,
      stripe: {
        enabled: paymentEnabled && formData.get('stripe_enabled') === 'on',
        price_id: formData.get('stripe_price_id') as string || ''
      },
      paypal: {
        enabled: paymentEnabled && formData.get('paypal_enabled') === 'on',
        item_id: formData.get('paypal_item_id') as string || ''
      },
      mercadopago: {
        enabled: paymentEnabled && formData.get('mercadopago_enabled') === 'on',
        preference_id: formData.get('mercadopago_preference_id') as string || ''
      }
    };

    console.log('üìù Actualizando producto:', id);
    console.log('üìä Datos:', { title, price, stock, images: imageUrls.length, payment: paymentEnabled });

    const { error: updateError } = await supabase
      .from('productos')
      .update({
        title,
        description,
        price,
        stock,
        category,
        sku,
        weight,
        dimensions,
        images: imageUrls,
        payment_config: paymentConfig
      })
      .eq('id', id);

    if (updateError) {
      console.error('‚ùå Error actualizando producto:', updateError);
    } else {
      console.log('‚úÖ Producto actualizado exitosamente');
      return Astro.redirect('/admin/productos');
    }
    
  } catch (error) {
    console.error('‚ùå Error procesando formulario:', error);
  }
}
