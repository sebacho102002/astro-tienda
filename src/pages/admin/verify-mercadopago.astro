---
export const prerender = false;
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Verificaci√≥n MercadoPago - Admin</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-100">
    <div class="container mx-auto px-6 py-8">
      <div class="max-w-4xl mx-auto">
        <h1 class="text-3xl font-bold text-gray-900 mb-8">üîç Verificaci√≥n de Credenciales MercadoPago</h1>
        
        <!-- Estado de verificaci√≥n -->
        <div id="verification-status" class="mb-8">
          <div class="bg-blue-500 text-white p-4 rounded-lg">
            <div class="flex items-center">
              <div class="animate-spin rounded-full h-6 w-6 border-b-2 border-white mr-3"></div>
              <span>Verificando credenciales...</span>
            </div>
          </div>
        </div>

        <!-- Resultados -->
        <div id="results" class="hidden">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <!-- Estado general -->
            <div class="bg-white rounded-lg shadow-md p-6">
              <h2 class="text-xl font-semibold mb-4">üìä Estado General</h2>
              <div id="general-status" class="space-y-2">
                <!-- Se cargar√° din√°micamente -->
              </div>
            </div>

            <!-- Detalles t√©cnicos -->
            <div class="bg-white rounded-lg shadow-md p-6">
              <h2 class="text-xl font-semibold mb-4">‚öôÔ∏è Detalles T√©cnicos</h2>
              <div id="technical-details" class="space-y-2">
                <!-- Se cargar√° din√°micamente -->
              </div>
            </div>
          </div>

          <!-- Prueba de checkout -->
          <div class="bg-white rounded-lg shadow-md p-6 mt-6">
            <h2 class="text-xl font-semibold mb-4">üß™ Prueba de Checkout</h2>
            <p class="text-gray-600 mb-4">Si las credenciales son v√°lidas, puedes probar el checkout con un producto de prueba:</p>
            <div id="checkout-test" class="space-y-4">
              <!-- Se cargar√° din√°micamente -->
            </div>
          </div>
        </div>

        <!-- Informaci√≥n de credenciales -->
        <div class="bg-white rounded-lg shadow-md p-6 mt-6">
          <h2 class="text-xl font-semibold mb-4">üîê Credenciales Configuradas</h2>
          <div class="bg-gray-50 p-4 rounded-lg">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-sm">
              <div>
                <strong>Access Token:</strong>
                <div class="font-mono text-xs text-gray-600 mt-1">APP_USR-5343888999883095-072214-...</div>
              </div>
              <div>
                <strong>Public Key:</strong>
                <div class="font-mono text-xs text-gray-600 mt-1">APP_USR-7f9096d6-84ea-4e1c-...</div>
              </div>
              <div>
                <strong>Client ID:</strong>
                <div class="font-mono text-xs text-gray-600 mt-1">5343888999883095</div>
              </div>
              <div>
                <strong>Environment:</strong>
                <div class="text-green-600 font-semibold mt-1">üü¢ PRODUCCI√ìN</div>
              </div>
            </div>
          </div>
        </div>

        <!-- Acciones -->
        <div class="mt-8 flex space-x-4">
          <button 
            onclick="verifyCredentials()" 
            class="bg-blue-500 hover:bg-blue-600 text-white px-6 py-2 rounded-lg"
          >
            üîÑ Verificar Nuevamente
          </button>
          <a 
            href="/admin/productos" 
            class="bg-gray-500 hover:bg-gray-600 text-white px-6 py-2 rounded-lg"
          >
            ‚Üê Volver al Admin
          </a>
        </div>
      </div>
    </div>

    <script>
      async function verifyCredentials() {
        const statusDiv = document.getElementById('verification-status');
        const resultsDiv = document.getElementById('results');
        
        if (!statusDiv || !resultsDiv) {
          console.error('‚ùå No se encontraron los elementos necesarios');
          return;
        }

        // Mostrar loading
        statusDiv.innerHTML = `
          <div class="bg-blue-500 text-white p-4 rounded-lg">
            <div class="flex items-center">
              <div class="animate-spin rounded-full h-6 w-6 border-b-2 border-white mr-3"></div>
              <span>Verificando credenciales...</span>
            </div>
          </div>
        `;
        resultsDiv.classList.add('hidden');

        try {
          const response = await fetch('/api/mercadopago/verify-credentials');
          const data = await response.json();

          if (data.success) {
            // √âxito
            statusDiv.innerHTML = `
              <div class="bg-green-500 text-white p-4 rounded-lg">
                <div class="flex items-center">
                  <svg class="w-6 h-6 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                  <span>‚úÖ Credenciales v√°lidas y funcionando correctamente</span>
                </div>
              </div>
            `;

            // Mostrar detalles
            const generalStatusEl = document.getElementById('general-status');
            if (generalStatusEl) {
              generalStatusEl.innerHTML = `
                <div class="flex items-center text-green-600">
                  <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                  <span>Credenciales configuradas correctamente</span>
                </div>
                <div class="flex items-center text-green-600">
                  <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                  <span>Conexi√≥n con MercadoPago exitosa</span>
                </div>
                <div class="flex items-center text-green-600">
                  <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                  <span>Entorno: ${data.details.environment}</span>
                </div>
              `;
            }

            const technicalDetailsEl = document.getElementById('technical-details');
            if (technicalDetailsEl) {
              technicalDetailsEl.innerHTML = `
                <div><strong>Preference ID:</strong> ${data.details.preferenceId}</div>
                <div><strong>Timestamp:</strong> ${new Date(data.details.timestamp).toLocaleString()}</div>
                <div><strong>Public Key:</strong> ${data.details.publicKey}</div>
              `;
            }

            const checkoutTestEl = document.getElementById('checkout-test');
            if (checkoutTestEl) {
              checkoutTestEl.innerHTML = `
                <p class="text-green-600 mb-4">‚úÖ Las credenciales son v√°lidas. Puedes probar el checkout:</p>
                <a href="${data.details.checkoutUrl}" target="_blank" 
                   class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-lg inline-block">
                  üß™ Probar Checkout de Prueba
                </a>
                <p class="text-xs text-gray-500 mt-2">Se abrir√° en una nueva pesta√±a</p>
              `;
            }

          } else {
            // Error
            statusDiv.innerHTML = `
              <div class="bg-red-500 text-white p-4 rounded-lg">
                <div class="flex items-center">
                  <svg class="w-6 h-6 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                  </svg>
                  <span>‚ùå Error en las credenciales: ${data.error}</span>
                </div>
              </div>
            `;

            const generalStatusEl = document.getElementById('general-status');
            if (generalStatusEl) {
              generalStatusEl.innerHTML = `
                <div class="text-red-600">‚ùå ${data.error}</div>
                <div class="text-gray-600">${data.details}</div>
              `;
            }
          }

        } catch (error) {
          const errorMessage = error instanceof Error ? error.message : 'Error desconocido';
          statusDiv.innerHTML = `
            <div class="bg-red-500 text-white p-4 rounded-lg">
              <div class="flex items-center">
                <svg class="w-6 h-6 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
                <span>‚ùå Error de conexi√≥n: ${errorMessage}</span>
              </div>
            </div>
          `;
        }

        resultsDiv.classList.remove('hidden');
      }

      // Verificar autom√°ticamente al cargar la p√°gina
      document.addEventListener('DOMContentLoaded', verifyCredentials);
    </script>
  </body>
</html>
