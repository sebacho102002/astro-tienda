---
import DashboardLayout from '../../layouts/DashboardLayout.astro';
import { supabase } from '../../lib/supabaseClient';

// üì¶ Obtener todos los pedidos con informaci√≥n del producto
let pedidos: any[] = [];
let error: string | null = null;
let estadisticas = {
  total: 0,
  pendientes: 0,
  completados: 0,
  ingresos: 0
};

try {
  const { data, error: pedidosError } = await supabase
    .from('pedidos')
    .select(`
      *,
      productos:producto_id (
        id,
        title,
        sku,
        price,
        images
      )
    `)
    .order('created_at', { ascending: false });

  if (pedidosError) {
    throw pedidosError;
  }

  pedidos = data || [];
  
  // Calcular estad√≠sticas
  estadisticas = {
    total: pedidos.length,
    pendientes: pedidos.filter(p => ['pendiente', 'pagado', 'enviado'].includes(p.status)).length,
    completados: pedidos.filter(p => p.status === 'entregado').length,
    ingresos: pedidos
      .filter(p => ['pagado', 'enviado', 'entregado'].includes(p.status))
      .reduce((sum, p) => sum + (p.total || 0), 0)
  };
  
} catch (e: any) {
  console.error('Error cargando pedidos:', e);
  error = e instanceof Error ? e.message : 'Error desconocido';
}

// Funci√≥n para obtener el color del estado
function getEstadoColor(estado: string) {
  switch (estado) {
    case 'pendiente': return 'bg-yellow-100 text-yellow-800';
    case 'pagado': return 'bg-green-100 text-green-800';
    case 'enviado': return 'bg-blue-100 text-blue-800';
    case 'entregado': return 'bg-purple-100 text-purple-800';
    case 'cancelado': return 'bg-red-100 text-red-800';
    default: return 'bg-gray-100 text-gray-800';
  }
}

// Funci√≥n para formatear precio
function formatPrice(price: number) {
  return new Intl.NumberFormat('es-CO', {
    style: 'currency',
    currency: 'COP'
  }).format(price);
}
---

<DashboardLayout title="Gesti√≥n de Pedidos">
  <div class="space-y-6">
    <!-- Header -->
    <div class="flex justify-between items-center">
      <div>
        <h1 class="text-2xl font-bold text-gray-900">üì¶ Pedidos</h1>
        <p class="text-gray-600">Administra todos los pedidos y pagos</p>
      </div>
      
      <!-- Estad√≠sticas mejoradas -->
      <div class="grid grid-cols-4 gap-4">
        <div class="bg-blue-50 p-4 rounded-lg text-center">
          <div class="text-2xl font-bold text-blue-700">{estadisticas.total}</div>
          <div class="text-sm text-blue-600">Total Pedidos</div>
        </div>
