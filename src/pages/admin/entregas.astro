// üöõ Panel de gesti√≥n de entregas mejorado con sistema unificado
import DashboardLayout from '../../layouts/DashboardLayout.astro';
import { supabase } from '../../lib/supabaseClient';
import { 
  obtenerConfigEstado, 
  obtenerClaseColor,
  type EstadoPedido 
} from '../../lib/estadosPedidos';

// Obtener pedidos listos para entrega y en proceso de entrega
let pedidos: any[] = [];
let error: string | null = null;
let estadisticas = {
  pendientes: 0,
  listos: 0,
  enviados: 0,
  entregados: 0,
  promedioDias: 0
};

try {
  const { data, error: pedidosError } = await supabase
    .from('pedidos')
    .select(`
      *,
      productos:producto_id (
        id,
        title,
        sku,
        price,
        images
      )
    `)
    .in('status', ['pagado', 'confirmado', 'preparando', 'enviado', 'en_transito', 'entregado'])
    .order('created_at', { ascending: false });

  if (pedidosError) {
    throw pedidosError;
  }

  pedidos = data || [];
  
  // Reorganizar estad√≠sticas con categor√≠as m√°s claras
  estadisticas = {
    pendientes: pedidos.filter(p => ['pendiente'].includes(p.status)).length,
    listos: pedidos.filter(p => ['confirmado', 'preparando'].includes(p.status)).length,
    enviados: pedidos.filter(p => p.status === 'enviado').length,
    entregados: pedidos.filter(p => p.status === 'entregado').length,
    promedioDias: 0 // Se calcular√° con los entregados
  };
  
  // Calcular promedio de d√≠as de entrega
  const entregados = pedidos.filter(p => p.status === 'entregado' && p.fecha_entrega_real);
  if (entregados.length > 0) {
    const totalDias = entregados.reduce((sum, p) => {
      const inicio = new Date(p.created_at);
      const fin = new Date(p.fecha_entrega_real);
      const dias = Math.ceil((fin.getTime() - inicio.getTime()) / (1000 * 60 * 60 * 24));
      return sum + dias;
    }, 0);
    estadisticas.promedioDias = Math.round(totalDias / entregados.length);
  }
  
} catch (e: any) {
  console.error('Error cargando pedidos:', e);
  error = e instanceof Error ? e.message : 'Error desconocido';
}

// Funci√≥n para formatear precio
function formatPrice(price: number) {
  return new Intl.NumberFormat('es-CO', {
    style: 'currency',
    currency: 'COP'
  }).format(price);
}

// Funci√≥n para obtener colores del estado usando sistema unificado
function getEstadoColor(estado: string) {
  try {
    return obtenerClaseColor(estado as EstadoPedido);
  } catch {
    return 'bg-gray-100 text-gray-800';
  }
}

// Funci√≥n para obtener prioridad de entrega
