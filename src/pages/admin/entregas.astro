  <script define:vars={{ pedidos }}>
    let pedidoIdActual = '';

    // üåç FUNCIONES GLOBALES (asignadas a window para acceso desde onclick)
    
    // Filtrar pedidos por estado usando el sistema unificado
    window.filtrarPedidos = function(filtro) {
      console.log('üîç Filtrando pedidos por:', filtro);
      const filas = document.querySelectorAll('.pedido-row');
      
      filas.forEach(fila => {
        const estado = fila.getAttribute('data-estado');
        let mostrar = false;
        
        switch(filtro) {
          case 'todos':
            mostrar = true;
            break;
          case 'pendientes':
            mostrar = estado === 'pendiente';
            break;
          case 'listos':
            mostrar = ['confirmado', 'preparando'].includes(estado);
            break;
          case 'enviados':
            mostrar = estado === 'enviado';
            break;
          case 'urgentes':
            // Pedidos con m√°s de 5 d√≠as en cualquier estado activo
            const fechaTexto = fila.querySelector('.text-xs.text-gray-500')?.textContent;
            if (fechaTexto) {
              const fecha = new Date(fechaTexto.split(' ')[0]);
              const ahora = new Date();
              const dias = Math.ceil((ahora.getTime() - fecha.getTime()) / (1000 * 60 * 60 * 24));
              mostrar = dias > 5 && !['entregado', 'cancelado', 'devuelto'].includes(estado);
            }
            break;
        }
        
        fila.style.display = mostrar ? 'table-row' : 'none';
      });
      
      console.log(`‚úÖ Filtro aplicado: ${filtro}`);
    };

    // Gestionar entrega
    window.gestionarEntrega = function(pedidoId) {
      console.log('üöõ Gestionando entrega para:', pedidoId);
      pedidoIdActual = pedidoId;
      const pedido = pedidos.find(p => p.id === pedidoId);
      
