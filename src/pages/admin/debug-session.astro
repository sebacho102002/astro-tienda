---
export const prerender = false;

import { getSessionFromToken } from '../../lib/auth';

// Debug de cookies JWT
const cookieHeader = Astro.request.headers.get('cookie') || '';
console.log('🍪 Cookie header debug:', cookieHeader);

// Obtener sesión del middleware
const middlewareUser = (Astro.locals as any)?.user || null;

let userSession: any = null;
let jwtToken = '';
let tokenValid = false;

try {
  // Extraer token JWT
  const tokenMatch = cookieHeader.match(/admin-token=([^;]+)/);
  
  if (tokenMatch) {
    jwtToken = tokenMatch[1];
    userSession = await getSessionFromToken(jwtToken);
    tokenValid = !!userSession;
  }
} catch (e) {
  console.error('Error parseando cookies:', e);
}
---

<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Debug - Cookies</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 p-8">
  <div class="max-w-4xl mx-auto">
    <h1 class="text-3xl font-bold mb-8">🔍 Debug de Cookies y Sesión</h1>
    
    <div class="bg-white rounded-lg shadow p-6 mb-6">
      <h2 class="text-xl font-semibold mb-4">📡 Headers de Cookie</h2>
      <div class="bg-gray-100 p-4 rounded font-mono text-sm">
        {cookieHeader || 'NO HAY COOKIES'}
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div class="bg-white rounded-lg shadow p-6">
        <h3 class="text-lg font-semibold mb-4">🎫 JWT Token</h3>
        <div class="bg-blue-100 p-3 rounded">
          <strong>admin-token:</strong> {jwtToken ? 'ENCONTRADO' : 'NO ENCONTRADO'}
        </div>
        {jwtToken && (
          <div class="mt-2 text-xs text-gray-600 break-all">
            {jwtToken.substring(0, 50)}...
          </div>
        )}
      </div>

      <div class="bg-white rounded-lg shadow p-6">
        <h3 class="text-lg font-semibold mb-4">✅ Token Válido</h3>
        <div class={`p-3 rounded ${tokenValid ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800'}`}>
          <strong>Estado:</strong> {tokenValid ? 'VÁLIDO' : 'INVÁLIDO/EXPIRADO'}
        </div>
      </div>
    </div>

    {middlewareUser && (
      <div class="bg-white rounded-lg shadow p-6 mt-6">
        <h3 class="text-lg font-semibold mb-4">🔐 Usuario (Middleware)</h3>
        <div class="grid grid-cols-2 gap-4 text-sm">
          <div>
            <strong>ID:</strong> {middlewareUser.id}
          </div>
          <div>
            <strong>Email:</strong> {middlewareUser.email}
          </div>
          <div>
            <strong>Nombre:</strong> {middlewareUser.name}
          </div>
          <div>
            <strong>Rol:</strong> {middlewareUser.role}
          </div>
          <div>
            <strong>Session ID:</strong> {middlewareUser.sessionId}
          </div>
        </div>
      </div>
    )}

    {userSession && (
      <div class="bg-white rounded-lg shadow p-6 mt-6">
        <h3 class="text-lg font-semibold mb-4">👤 Datos de Usuario (JWT)</h3>
        <div class="bg-purple-100 p-4 rounded">
          <p><strong>ID:</strong> {userSession.id}</p>
          <p><strong>Name:</strong> {userSession.name}</p>
          <p><strong>Email:</strong> {userSession.email}</p>
          <p><strong>Rol:</strong> {userSession.role}</p>
        </div>
      </div>
    )}

    <div class="bg-white rounded-lg shadow p-6 mt-6">
      <h3 class="text-lg font-semibold mb-4">🔗 Acciones</h3>
      <div class="space-x-4">
        <a href="/admin/login" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">
          🔐 Ir a Login
        </a>
        <a href="/admin/dashboard" class="bg-green-500 text-white px-4 py-2 rounded hover:bg-green-600">
          📊 Ir al Dashboard  
        </a>
        <button onclick="logout()" class="bg-red-500 text-white px-4 py-2 rounded hover:bg-red-600">
          🚪 Logout
        </button>
      </div>
    </div>
  </div>

  <script is:inline>
    async function logout() {
      try {
        const response = await fetch('/api/auth/logout', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' }
        });

        if (response.ok) {
          alert('✅ Logout exitoso');
          window.location.reload();
        } else {
          alert('❌ Error en logout');
        }
      } catch (error) {
        console.error('Error:', error);
        alert('❌ Error en logout');
      }
    }
  </script>
</body>
</html>
