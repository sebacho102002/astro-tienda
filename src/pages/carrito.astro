    <!-- Script del carrito -->
    <script src="/cart.js" type="module"></script>
    
    <script type="module">
      // Funci√≥n para manejar el checkout
      window.handleCheckout = async function() {
        const nombre = document.getElementById('nombre').value;
        const email = document.getElementById('email').value;
        const telefono = document.getElementById('telefono').value;
        const direccion = document.getElementById('direccion').value;
        
        // Validar campos requeridos
        if (!nombre || !email || !direccion) {
          alert('Por favor completa todos los campos obligatorios');
          return;
        }
        
        // Validar email
        const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
        if (!emailRegex.test(email)) {
          alert('Por favor ingresa un email v√°lido');
          return;
        }
        
        const clientInfo = {
          nombre: nombre,
          email: email,
          telefono: telefono,
          direccion: direccion
        };
        
        // Usar el cartManager para proceder al checkout
        if (window.cartManager) {
          await window.cartManager.proceedToCheckout(clientInfo);
        } else {
          alert('Error: Sistema de carrito no disponible');
        }
      };
      
      // Inicializar la p√°gina del carrito cuando cargue
      setTimeout(() => {
        console.log('üõí Inicializando p√°gina del carrito');
        if (window.cartManager) {
          console.log('‚úÖ CartManager encontrado, renderizando carrito');
          window.cartManager.renderCartPage();
        } else {
          console.error('‚ùå CartManager no disponible');
        }
      }, 500); // Esperar 500ms
    </script>
